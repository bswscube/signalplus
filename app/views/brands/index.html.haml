.row
  .col-md-8.dash-header
    =image_tag('#', :alt => 'pic', :class => 'brand-img')
    %h3= @brand.name
    %p= @brand.name
  .col-md-4.brand-pricing-plan
    %p= "brand princing info here"

.row
  .col-md-8
    %ul.nav.nav-pills
      %li.active
        %a{:href => '#signals', :data => {:toggle => 'tab'}} SIGNALS
      %li
        %a{:href => '#new-signals', :data => {:toggle => 'tab'}} CREATE NEW
.row
  .col-md-12
    .tab-content.clearfix
      .tab-pane.active#signals
        = render 'listen_signals/index', :locals => { :brand => @brand }
      .tab-pane#new-signals
        -# = render 'dash/v2/table'
