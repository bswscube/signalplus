.row
  .dash
    .col-md-12.dash-header
      =image_tag('#', :alt => 'pic', :class => 'brand-img')
      %h3
        = @brand.name

      .brand-pricing-plan
        %p= "brand princing info here"

      %br
      %p
        @
        = @brand.name

    .col-md-12
      %ul.nav.nav-pills
        %li.active
          %a{:href => '#signals', :data => {:toggle => 'tab'}}
            %p SIGNALS
        %li
          %a{:href => '#new-signals', :data => {:toggle => 'tab'}}
            %p CREATE NEW

  .col-md-12
    .tab-content.clearfix
      .tab-pane.active#signals
        .row.dash-panel
          = render 'listen_signals/index', :locals => { :brand => @brand }
      .tab-pane#new-signals
        .row.dash-panel
          = render 'listen_signals/new'
